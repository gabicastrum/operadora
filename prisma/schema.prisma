// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plano {
  codigo      Int          @id @default(autoincrement())
  nome        String
  custoMensal Decimal 
  data        DateTime     @default(now())
  descricao   String
  assinaturas Assinatura[]
}

model Cliente {
  codigo      Int          @id @default(autoincrement())
  nome        String
  email       String       @unique
  assinaturas Assinatura[]
}

model Assinatura {
  codigo              Int        @id @default(autoincrement())
  codPlano            Int
  codCli              Int
  inicioFidelidade    DateTime   @default(now())
  fimFidelidade       DateTime
  dataUltimoPagamento DateTime?
  custoFinal          Decimal
  descricao           String
  plano               Plano      @relation(fields: [codPlano], references: [codigo])
  cliente             Cliente    @relation(fields: [codCli], references: [codigo])
  pagamentos          Pagamento[]
}

model Pagamento {
  codigo        Int        @id @default(autoincrement())
  codAss        Int
  valorPago     Decimal
  dataPagamento DateTime
  assinatura    Assinatura @relation(fields: [codAss], references: [codigo])
}